{
  "name": "rnx-kit",
  "version": "0.1.0",
  "private": true,
  "description": "",
  "keywords": [],
  "license": "MIT",
  "author": "Jason Morse <jasonmo@microsoft.com>",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/rnx-kit.git"
  },
  "scripts": {
    "build": "nx run-many --target build --parallel --all",
    "build:ci": "nx run-many --target test --parallel --all",
    "build:tools": "yarn workspace rnx-kit-scripts build:tools",
    "build-scope": "nx run-many --target build --parallel --projects",
    "bump-versions": "beachball bump",
    "bundle": "nx run-many --target bundle --parallel --all",
    "bundle:ci": "yarn bundle --verbose",
    "bundle+esbuild": "nx run-many --target bundle+esbuild --parallel --all",
    "change": "beachball change",
    "check": "beachball check --branch origin/main --changehint \"Run 'yarn run change' from root of repo to generate a change file.\"",
    "ci": "yarn --cache-folder .yarn-offline-mirror --prefer-offline --frozen-lockfile --non-interactive",
    "clean": "nx clear-cache",
    "depcheck": "nx run-many --target depcheck --parallel --all",
    "format": "nx run-many --target format --parallel --all",
    "lint": "nx run-many --target lint --parallel --all",
    "preinstall": "node ./scripts/preinstall.js",
    "postinstall": "yarn build:tools",
    "publish:beachball": "beachball publish --bump-deps -m\"ðŸ“¦ applying package updates ***NO_CI***\"",
    "rnx-dep-check": "yarn build-scope @rnx-kit/dep-check && scripts/rnx-dep-check.js",
    "test": "nx run-many --target test --parallel --all",
    "update-readme": "yarn update-readme:main && nx run-many --target update-readme --parallel --all",
    "update-readme:main": "node scripts/update-readme.js"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@nrwl/cli": "^12.9.0",
    "@nrwl/tao": "^12.9.0",
    "@nrwl/workspace": "^12.9.0",
    "@rnx-kit/dep-check": "*",
    "beachball": "^2.2.0",
    "metro": "^0.66.2",
    "metro-config": "^0.66.2",
    "metro-core": "^0.66.2",
    "metro-react-native-babel-preset": "^0.66.2",
    "metro-react-native-babel-transformer": "^0.66.2",
    "metro-resolver": "^0.66.2",
    "metro-runtime": "^0.66.2",
    "prettier": "^2.3.0",
    "suggestion-bot": "^1.2.2",
    "typescript": "^4.0.0"
  },
  "workspaces": {
    "packages": [
      "packages/@types/*",
      "packages/*",
      "scripts"
    ]
  },
  "beachball": {
    "branch": "origin/main",
    "disallowedChangeTypes": [
      "major"
    ],
    "access": "public"
  },
  "eslintConfig": {
    "extends": "@rnx-kit/eslint-config"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.md",
        "options": {
          "proseWrap": "always"
        }
      }
    ]
  }
}
